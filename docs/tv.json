        "/tts/tasks": {
            "get": {
                "operationId": "TaskController_getTasks",
                "parameters": [
                    {
                        "name": "page",
                        "required": false,
                        "in": "query",
                        "description": "页码（从1开始）",
                        "schema": {
                            "example": 1,
                            "type": "string"
                        }
                    },
                    {
                        "name": "pageSize",
                        "required": false,
                        "in": "query",
                        "description": "每页数量",
                        "schema": {
                            "example": 10,
                            "type": "string"
                        }
                    },
                    {
                        "name": "status",
                        "required": false,
                        "in": "query",
                        "description": "任务状态过滤",
                        "schema": {
                            "enum": [
                                "pending",
                                "queued",
                                "running",
                                "success",
                                "failed"
                            ],
                            "type": "string"
                        }
                    },
                    {
                        "name": "quality",
                        "required": false,
                        "in": "query",
                        "description": "模型质量过滤",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "location",
                        "required": false,
                        "in": "query",
                        "description": "节点位置过滤",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": ""
                    }
                },
                "summary": "获取任务列表",
                "tags": [
                    "TTS 任务"
                ]
